{
    "version": "2.0.0",
    "options": {
        "env": {
            "data_directory": "/media/hlfernandez/Almacenamiento/Data/Collaborations/Rosalinda/Pipeline_HTSeqv2.0.9/",
            "single_task": "pathfindr",
            "from_task": "join-all",
            "until_task": "delite"
        }
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "compi-dk build -tv"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock -v ${data_directory}:${data_directory} singgroup/compi-rnaseq -pa ${data_directory}/parameters -r runner.xml"
        },
        {
            "label": "build-and-run",
            "type": "shell",
            "dependsOn": ["build", "run"],
            "dependsOrder": "sequence"
        },
        {
            "label": "run single task",
            "type": "shell",
            "command": "docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock -v ${data_directory}:${data_directory} -v /tmp:/tmp singgroup/compi-rnaseq -pa ${data_directory}/parameters -r runner.xml -st ${single_task} -o --logs ${data_directory}/compi/logs -n 5",
            "dependsOn": "build",
        },
        {
            "label": "run partially",
            "type": "shell",
            "command": "docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock -v ${data_directory}:${data_directory} -v /tmp:/tmp singgroup/compi-rnaseq -pa ${data_directory}/parameters -r runner.xml --from ${from_task} --until ${until_task} -o --logs ${data_directory}/compi/logs",
            "dependsOn": "build",
        },
        {
            "label": "update pathfindR script",
            "type": "shell",
            "command": "wget https://raw.githubusercontent.com/sing-group/run-pathfindR/refs/heads/master/run-pathfindR.R -O scripts/run-pathfindR.R",
            "dependsOn": "build",
        }
    ]
}